{% extends 'base.html.twig' %}

{% block title %}User index
{% endblock %}

{% block body %}
	<h1 class="titreindex">User index</h1>
	<div class="container">
		<div class="card text-left shadow-lg">
			<img class="card-img-top" src="holder.js/100px180/" alt="">
			<div class="card-body">
				<table class="table table-striped">
					<thead>
						<tr>
							<th>Id</th>
							<th>Email</th>
							<th>Roles</th>
							<th>actions</th>
						</tr>
					</thead>
					<tbody>
						{% for user in users %}
							<tr>
								<td>{{ user.id }}</td>
								<td>{{ user.email }}</td>
								<td>{{ user.roles ? user.roles|json_encode : '' }}</td>
								<td>
									<a href="{{ path('user_show', {'id': user.id}) }}"class="btn btn-info"><i class="far fa-eye"></i></a>
									<a href="{{ path('user_edit', {'id': user.id}) }}"class="btn btn-warning"><i class="far fa-edit"></i></a>
								</td>
							</tr>
						{% else %}
							<tr>
								<td colspan="5">no records found</td>
							</tr>
						{% endfor %}
					</tbody>
				</table>
			</div>
		</div>
		<a href="{{ path('user_new') }}"class="btn btn-dark mt-3">Create new</a>
	</div>


{% endblock %}
