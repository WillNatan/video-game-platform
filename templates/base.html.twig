<!DOCTYPE html>
<html>
	<head>
		<meta charset="UTF-8">
		<meta name="viewport" content="width=device-width, initial-scale=1.0">
		<title>
			{% block title %}Welcome!
			{% endblock %}
		</title>
		<link rel="stylesheet" href="https://bootswatch.com/4/lux/bootstrap.min.css">
		<link rel="stylesheet" href="{{ asset('css/navbar.css') }}">
		<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.2/css/all.min.css" integrity="sha512-HK5fgLBL+xu6dm/Ii3z4xhlSUyZgTT9tuc/hSrtw6uzJOvgRr2a9jyxxT1ely+B+xFAmJKVSTbpM/CuL7qxO8w==" crossorigin="anonymous"/> {% block stylesheets %}{% endblock %}{% block javascripts %}{% endblock %}
		
		</head>
		<body>

			<nav class="sidebar" id="sidebar">
				<button class="closebtn btn btn-dark" id="closebtn" onclick="closeNav()"><i class="fa fa-times"></i></button>
				<ul>
					<li><a href="{{ path('home')}}" class=""><i class="fas fa-home"></i>Accueil</a></li>
					<li><a href="{{ path('user_index')}}" class=""><i class="fas fa-users"></i>Utilisateurs</a></li>
					<li><a href="{{ path('video_game_index')}}" class=""><i class="fas fa-gamepad"></i>Jeux</a></li>
					<li><a href="{{ path('game_key_index')}}" class=""><i class="fas fa-key"></i>CLés de jeux</a></li>
					<li><a href="{{ path('category_index')}}" class=""><i class="fas fa-table"></i>Catégories</a></li>

				</ul>

			</nav>
            <div class="content" id="content">
			<button class="openbtn btn btn-dark" onclick="openNav()"><i class="fa fa-bars"></i></button>
			    {% block body %}{% endblock %}
            </div>
			{% block javascript %}{% endblock %}
			<script>function openNav() {
document.getElementById("sidebar").style.marginLeft = "200px";
document.getElementById("content").style.marginLeft = "200px";
}</script>
<script>function closeNav() {
  document.getElementById("sidebar").style.marginLeft = "-200px";
  document.getElementById("content").style.marginLeft = "0px";
}</script>
			<script src="https://code.jquery.com/jquery-3.5.1.min.js" integrity="sha256-9/aliU8dGd2tb6OSsuzixeV4y/faTqgFtohetphbbj0=" crossorigin="anonymous"></script>
        <script src="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.2/js/all.min.js" integrity="sha512-UwcC/iaz5ziHX7V6LjSKaXgCuRRqbTp1QHpbOJ4l1nw2/boCfZ2KlFIqBUA/uRVF0onbREnY9do8rM/uT/ilqw==" crossorigin="anonymous"></script>
        <script src="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/4.6.0/js/bootstrap.min.js" integrity="sha512-XKa9Hemdy1Ui3KSGgJdgMyYlUg1gM+QhL6cnlyTe2qzMCYm4nAZ1PsVerQzTTXzonUR+dmswHqgJPuwCq1MaAg==" crossorigin="anonymous"></script>
		</body>
	</html>
