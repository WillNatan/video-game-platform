{% extends 'base.html.twig' %}

{% block title %}Category index{% endblock %}

{% block body %}
    <h1 class="titreindex">Liste des catégories de jeu</h1>
    <div class="container">
    <div class="card text-left shadow-lg">
      <img class="card-img-top" src="holder.js/100px180/" alt="">
      <div class="card-body">
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Name</th>
                    <th>actions</th>
                </tr>
            </thead>
            <tbody>
            {% for category in categories %}
                <tr>
                    <td>{{ category.id }}</td>
                    <td>{{ category.name }}</td>
                    <td>
                            <a href="{{ path('category_show', {'id': category.id}) }}" class="btn btn-info"><i class="far fa-eye"></i></a>
                            <a href="{{ path('category_edit', {'id': category.id}) }}" class="btn btn-warning"><i class="far fa-edit"></i></a>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="3">no records found</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
        <button onclick="window.location.href ='{{ path('category_new') }}'"type="button" class="btn btn-dark">
            Ajouter une catégorie
        </button>
      </div>
    </div>
    </div>
{% endblock %}
