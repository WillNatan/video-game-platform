{% extends 'frontbase.html.twig' %}

{% block title %}ActuGames - Accueil
{% endblock %}

{% block body %}
	<div class="row">
		<div class="col-md-6">
			<img class="d-block w-100" src="{{ asset('img/gameimg/'~game.image) }}" alt="Third slide">
		</div>
		<div class="col-md-6">
        <iframe  src="{{ game.trailerUrl }}" width="100%" height="400" frameborder="0" allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture" allowfullscreen></iframe>
			<h1 class="text-light">{{ game.name }}</h1>
			<p>{{ game.description }}</p>
			<h1 class="text-success text-center font-weight-bold">{{ game.price }}
				â‚¬</h1>
			<div class="text-center">
				<form action="{{ path('addToCart', {'id': game.id}) }}" method="POST">
					<button type="submit" class="btn btn-success">Ajouter au panier</button>
				</form>
			</div>
		</div>
	</div>
{% endblock %}
