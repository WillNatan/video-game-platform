{% extends 'frontbase.html.twig' %}

{% block title %}ActuGames - Accueil
{% endblock %}

{% block body %}
	<div class="row">
		<div class="col-md-8">
			<div id="carouselExampleControls" class="carousel slide mb-3 mb-md-0" data-ride="carousel">
				<div class="carousel-inner">
					<div class="carousel-item active">
						<img class="d-block w-100" src="{{ asset('img/carousel/mario.jpg') }}" alt="First slide">
						<div class="img-caption linear-bg-red">
							<h3>Mario</h3>
						</div>
					</div>
					<div class="carousel-item">
						<img class="d-block w-100" src="{{ asset('img/carousel/nfs.jpg') }}" alt="Second slide">
						<div class="img-caption linear-bg-green">
							<h3>Need for speed</h3>
						</div>
					</div>
					<div class="carousel-item">
						<img class="d-block w-100" src="{{ asset('img/carousel/spiderman.jpg') }}" alt="Third slide">
						<div class="img-caption linear-bg-blue">
							<h3>Spiderman</h3>
						</div>
					</div>
				</div>
				<a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
					<span class="carousel-control-prev-icon" aria-hidden="true"></span>
					<span class="sr-only">Previous</span>
				</a>
				<a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
					<span class="carousel-control-next-icon" aria-hidden="true"></span>
					<span class="sr-only">Next</span>
				</a>
			</div>
		</div>
		<div class="col-md-4">
			<div class="row">
				<div class="col-md-12 pb-3">
					<div class="content w-100 position-relative">
						<img class="d-block w-100" src="{{ asset('img/carousel/doom.jpg') }}" alt="best seller">
						<div class="img-caption linear-bg-red">
							<h3>Doom</h3>
						</div>
					</div>
				</div>
				<div class="col-md-12">
					<div class="content w-100 position-relative">
						<img class="d-block w-100" src="{{ asset('img/carousel/warzone.jpeg') }}" alt="best seller">
						<div class="img-caption linear-bg-blue">
							<h3>Call of Duty - Warzone</h3>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
	<h1 class="text-white mt-3 mb-3">Jeux actuels</h1>
	<div class="row game-list">
		{% for game in games %}
			<div class="col-md-3">
			<a href="{{ path('gameDetails', {'slug':game.slug}) }}">
				<img class="d-block w-100" src="{{ asset('img/gameimg/'~game.image) }}" alt="best seller">
				</a>
			<div class="game-info">
				<a href=""><h4 class="text-light">{{ game.name }}</h4></a>
				<div class="game-text">
					<span>{{ game.price }} â‚¬</span>
					<div class="stars">
						<i class="fa fa-star"></i>
						<i class="fa fa-star"></i>
						<i class="fa fa-star"></i>
						<i class="fa fa-star"></i>
						<i class="fa fa-star"></i>
					</div>
				</div>
			</div>
			
		</div>
		{% endfor %}
        <div class="col-md-3">
			
		</div>
        <div class="col-md-3">
			
		</div>
        <div class="col-md-3">
			
		</div>
	</div>
{% endblock %}
