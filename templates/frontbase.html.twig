<!DOCTYPE html>
<html>
	<head>
		<meta charset="UTF-8">
		<title>
			{% block title %}Welcome!
			{% endblock %}
		</title>
		<meta name="viewport" content="width=device-width, initial-scale=1.0">
		<link rel="stylesheet" href="https://bootswatch.com/4/materia/bootstrap.min.css">
		<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.2/css/all.min.css" integrity="sha512-HK5fgLBL+xu6dm/Ii3z4xhlSUyZgTT9tuc/hSrtw6uzJOvgRr2a9jyxxT1ely+B+xFAmJKVSTbpM/CuL7qxO8w==" crossorigin="anonymous"/>
		<link rel="stylesheet" href="{{ asset('css/navbar-front.css') }}">
		<link rel="stylesheet" href="{{ asset('css/main.css') }}">
	</head>
	<body>
		<div class="container bg-dark">
			<header></header>
			<nav
				class="navbar navbar-expand-md  navbar-dark">
				<!-- Brand -->
				<a class="navbar-brand" href="#">ActuGames</a>

				<!-- Toggler/collapsibe Button -->
				<button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#collapsibleNavbar">
					<span class="navbar-toggler-icon"></span>
				</button>

				<!-- Navbar links -->
				<div class="collapse navbar-collapse" id="collapsibleNavbar">
					<ul class="navbar-nav">
						<li class="nav-item">
							<a class="nav-link" href="{{ path('home') }}">Accueil</a>
						</li>
						<li class="nav-item">
							<a class="nav-link" href="{{ path('allGames') }}">Tous les jeux</a>
						</li>
					</ul>
					<ul class="navbar-nav ml-auto">
						{% if is_granted('ROLE_ADMIN') %}
							<li class="nav-item">
								<a class="nav-link" href="{{ path('admin_home') }}">Administration</a>
							</li>
						{% endif %}
						<li class="nav-item">
							{% if app.user %}
								<a class="nav-link" href="{{ path('app_logout') }}">Déconnexion</a>
							{% else %}
								<a class="nav-link" href="{{ path('app_login') }}">Connexion</a>
							{% endif %}
						</li>
						{% if app.user %}
							{% else %}
								<li class="nav-item">
									<a class="nav-link" href="{{ path('app_register') }}">Inscription</a>
								</li>
						{% endif %}
						<li class="nav-item">
							<a class="nav-link" href="{{ path('cart') }}">
								<i class="fa fa-shopping-cart"></i>
								<span class="badge badge-notify text-dark" style="font-size:10px;">{{ cartCounter }}</span>
							</a>
						</li>
					</li>
				</ul>
			</div>
		</nav>
		<div class="mt-3"> {% block body %}{% endblock %}
			</div>
			<footer>
				<h1>ActuGames</h1>
				<div class="row">
					<div class="col-md-4">
						<h3>Liens</h3>
						<ul>
							<li><a href="">Accueil</a></li>
							<li><a href="">Jeux</a></li>
							<li><a href="">Contact</a></li>
						</ul>
					</div>
				</div>
				<p class="text-center text-light copyrights">Copyrights ActuGames - Tous droits réservés</p>
			</footer>
		</body>
	</html>
</div>

<script src="https://code.jquery.com/jquery-3.5.1.min.js" integrity="sha256-9/aliU8dGd2tb6OSsuzixeV4y/faTqgFtohetphbbj0=" crossorigin="anonymous"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.2/js/all.min.js" integrity="sha512-UwcC/iaz5ziHX7V6LjSKaXgCuRRqbTp1QHpbOJ4l1nw2/boCfZ2KlFIqBUA/uRVF0onbREnY9do8rM/uT/ilqw==" crossorigin="anonymous"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/4.6.0/js/bootstrap.min.js" integrity="sha512-XKa9Hemdy1Ui3KSGgJdgMyYlUg1gM+QhL6cnlyTe2qzMCYm4nAZ1PsVerQzTTXzonUR+dmswHqgJPuwCq1MaAg==" crossorigin="anonymous"></script></body></html>
{% block javascripts %}{% endblock %}