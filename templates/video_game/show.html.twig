{% extends 'base.html.twig' %}

{% block title %}VideoGame
{% endblock %}

{% block body %}
	<h1 class="titreindex">VideoGame</h1>
	<div class="card text-left shadow-lg">
		<img class="card-img-top" src="holder.js/100px180/" alt="">
		<div class="card-body">
			<div class="table-responsive">
				<table class="table table-striped">
					<tbody>
						<tr>
							<th>Id</th>
							<td>{{ video_game.id }}</td>
						</tr>
						<tr>
							<th>Name</th>
							<td>{{ video_game.name }}</td>
						</tr>
						<tr>
							<th>Description</th>
							<td>{{ video_game.description }}</td>
						</tr>
						<tr>
							<th>Price</th>
							<td>{{ video_game.price }}</td>
						</tr>
						<tr>
							<th>Image</th>
							<td>{{ video_game.image }}</td>
						</tr>
					</tbody>
				</table>
			</div>
		</div>
	</div>

	<div class="d-flex mt-3">
		<a href="{{ path('video_game_index') }}" class="btn btn-dark">back to list</a>

		<a href="{{ path('video_game_edit', {'id': video_game.id}) }}" class="btn btn-dark ml-3">edit</a>

		{{ include('video_game/_delete_form.html.twig') }}
	</div>
{% endblock %}
